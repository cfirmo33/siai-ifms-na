<%= render 'layouts/head_devise' %>

<body class="devise">
  <%= render 'layouts/alerts' %>

	<section class="container">
		<h1 class="devise-logo">
      <%= image_tag 'logo_ifms_v.jpg', width: 150 %>
    </h1>

		<div class="devise-content">
  		<h2 class="title is-4 has-text-centered">SIAI</h2>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="devise-field">
			  	<%= f.label :username, 'UsuÃ¡rio' %>
			  	<%= f.text_field :username, autofocus: true, required: true %>
			  </div>

			  <div class="devise-field">
			  	<%= f.label :password, 'Senha' %>
			    <%= f.password_field :password, autocomplete: 'off', required: true %>
			  </div>

				<div class="row">
				  <% if devise_mapping.rememberable? -%>
				    <div class="devise-col devise-checkbox">
				    	<%= f.check_box :remember_me %>
				    	<%= f.label :remember_me, 'Lembrar-me' %>
				    </div>
				  <% end -%>

				  <div class="devise-col devise-submit">
				  	<%= f.submit 'Entrar', class: 'devise-btn button is-success' %>
				  </div>
			  </div>
			<% end %>
		</div>

		<div class="devise-links">
			Instituto Federal de Mato Grosso do Sul<br />
      SIAI - 1.0.0
		</div>
	</section>
</body>
